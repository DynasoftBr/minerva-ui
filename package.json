{
  "name": "minerva-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-dependecies": "npm run build:client && build:models",
    "build:client": "npm start --prefix poseidon-client/",
    "build:models": "npm start --prefix poseidon-core-models/",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "test": "mocha --require ts-node/register \"tests/**/*.ts\""
  },
  "dependencies": {
    "@poseidon/client": "file:poseidon-client",
    "@poseidon/core-models": "file:poseidon-core-models",
    "axios": "^0.18.0",
    "bootstrap": "^4.2.1",
    "font-awesome": "^4.7.0",
    "inputmask": "^4.0.6",
    "jquery": "^3.3.1",
    "moment": "^2.24.0",
    "popper.js": "^1.14.7",
    "pretty-checkbox": "^3.0.3",
    "register-service-worker": "^1.5.2",
    "timeago.js": "^3.0.2",
    "vue": "^2.6.2",
    "vue-class-component": "^6.3.2",
    "vue-global-events": "^1.1.0",
    "vue-property-decorator": "^7.3.0",
    "vue-template-compiler": "^2.6.2",
    "vuebar": "0.0.20"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.6.3",
    "@types/bootstrap": "^4.2.1",
    "@types/chai": "^4.1.7",
    "@types/jquery": "^3.3.29",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.21",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-e2e-cypress": "^3.4.0",
    "@vue/cli-plugin-pwa": "^3.4.0",
    "@vue/cli-plugin-typescript": "^3.4.0",
    "@vue/cli-plugin-unit-mocha": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "chai": "^4.2.0",
    "lint-staged": "^8.1.3",
    "mocha": "^5.2.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "ts-node": "^6.0.5",
    "typescript": "^3.3.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
